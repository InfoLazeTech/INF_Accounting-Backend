  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-set token from login response",
          "if (pm.response && pm.response.json() && pm.response.json().data && pm.response.json().data.token) {",
          "    pm.collectionVariables.set('token', pm.response.json().data.token);",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-save payment ID from create payment response",
          "if (pm.response && pm.response.json() && pm.response.json().data && pm.response.json().data._id) {",
          "    pm.collectionVariables.set('paymentId', pm.response.json().data._id);",
          "}"
        ]
      }
    }
