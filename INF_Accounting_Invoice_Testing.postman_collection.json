{
  "info": {
    "name": "INF Accounting - Invoice Testing",
    "description": "Essential Invoice API endpoints with dummy data for testing",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "companyId",
      "value": "64f8a1b2c3d4e5f6a7b8c9d1",
      "type": "string"
    },
    {
      "key": "customerId",
      "value": "64f8a1b2c3d4e5f6a7b8c9d2",
      "type": "string"
    },
    {
      "key": "itemId",
      "value": "64f8a1b2c3d4e5f6a7b8c9d4",
      "type": "string"
    },
    {
      "key": "invoiceId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "üîê Authentication",
      "item": [
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@infaccounting.com\",\n  \"password\": \"Admin@123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "üìÑ Invoice Management",
      "item": [
        {
          "name": "Create Invoice",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"companyId\": \"{{companyId}}\",\n  \"customerId\": \"{{customerId}}\",\n  \"customerName\": \"XYZ Corporation\",\n  \"customerContact\": {\n    \"email\": \"contact@xyz.com\",\n    \"phone\": \"+91-9876543210\",\n    \"alternatePhone\": \"+91-9876543211\"\n  },\n  \"customerAddress\": {\n    \"street\": \"123 Business Park\",\n    \"city\": \"Mumbai\",\n    \"state\": \"Maharashtra\",\n    \"pincode\": \"400001\",\n    \"country\": \"India\"\n  },\n  \"invoiceDate\": \"2024-01-20T10:30:00.000Z\",\n  \"dueDate\": \"2024-02-20T10:30:00.000Z\",\n  \"referenceNumber\": \"SO-2024-001\",\n  \"description\": \"Software license sale\",\n  \"items\": [\n    {\n      \"itemId\": \"{{itemId}}\",\n      \"itemName\": \"Software License\",\n      \"hsnCode\": \"9983\",\n      \"sku\": \"SW-001\",\n      \"description\": \"Annual Software License\",\n      \"quantity\": 3,\n      \"unitPrice\": 50000,\n      \"discount\": 5000,\n      \"taxRate\": 18,\n      \"lineTotal\": 135000\n    },\n    {\n      \"itemId\": \"64f8a1b2c3d4e5f6a7b8c9d5\",\n      \"itemName\": \"Support Package\",\n      \"hsnCode\": \"9983\",\n      \"sku\": \"SUP-001\",\n      \"description\": \"24/7 Technical Support\",\n      \"quantity\": 1,\n      \"unitPrice\": 25000,\n      \"discount\": 0,\n      \"taxRate\": 18,\n      \"lineTotal\": 25000\n    }\n  ],\n  \"totals\": {\n    \"subtotal\": 160000,\n    \"totalDiscount\": 5000,\n    \"sgst\": 13950,\n    \"cgst\": 13950,\n    \"igst\": 0,\n    \"totalTax\": 27900,\n    \"shippingCharges\": 0,\n    \"otherCharges\": 0,\n    \"grandTotal\": 182900\n  },\n  \"paymentTerms\": {\n    \"dueDate\": \"2024-02-20T10:30:00.000Z\",\n    \"paymentMethod\": \"bank_transfer\",\n    \"paymentTerms\": \"Net 30\",\n    \"notes\": \"Payment within 30 days\"\n  },\n  \"status\": \"draft\",\n  \"deliveryDate\": \"2024-01-25T10:30:00.000Z\",\n  \"deliveryAddress\": {\n    \"street\": \"123 Business Park\",\n    \"city\": \"Mumbai\",\n    \"state\": \"Maharashtra\",\n    \"pincode\": \"400001\",\n    \"country\": \"India\"\n  },\n  \"deliveryNotes\": \"Deliver to reception\",\n  \"notes\": \"Urgent delivery required\",\n  \"termsAndConditions\": \"Standard terms and conditions apply\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/invoice",
              "host": ["{{baseUrl}}"],
              "path": ["invoice"]
            }
          },
          "response": []
        },
        {
          "name": "Get All Invoices",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/invoice?companyId={{companyId}}&page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["invoice"],
              "query": [
                {
                  "key": "companyId",
                  "value": "{{companyId}}"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Invoice by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/invoice/{{invoiceId}}?companyId={{companyId}}",
              "host": ["{{baseUrl}}"],
              "path": ["invoice", "{{invoiceId}}"],
              "query": [
                {
                  "key": "companyId",
                  "value": "{{companyId}}"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Update Invoice",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerName\": \"XYZ Corporation - Updated\",\n  \"description\": \"Software license sale - Updated\",\n  \"status\": \"sent\",\n  \"notes\": \"Updated delivery requirements\",\n  \"deliveryNotes\": \"Updated delivery instructions\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/invoice/{{invoiceId}}",
              "host": ["{{baseUrl}}"],
              "path": ["invoice", "{{invoiceId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Update Invoice Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"sent\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/invoice/{{invoiceId}}/status",
              "host": ["{{baseUrl}}"],
              "path": ["invoice", "{{invoiceId}}", "status"]
            }
          },
          "response": []
        },
        {
          "name": "Record Payment",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"paymentAmount\": 182900\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/invoice/{{invoiceId}}/payment",
              "host": ["{{baseUrl}}"],
              "path": ["invoice", "{{invoiceId}}", "payment"]
            }
          },
          "response": []
        },
        {
          "name": "Get Invoices by Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/invoice/status/list?companyId={{companyId}}&status=draft",
              "host": ["{{baseUrl}}"],
              "path": ["invoice", "status", "list"],
              "query": [
                {
                  "key": "companyId",
                  "value": "{{companyId}}"
                },
                {
                  "key": "status",
                  "value": "draft"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Revenue Summary",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/invoice/summary/revenue?companyId={{companyId}}&startDate=2024-01-01&endDate=2024-12-31",
              "host": ["{{baseUrl}}"],
              "path": ["invoice", "summary", "revenue"],
              "query": [
                {
                  "key": "companyId",
                  "value": "{{companyId}}"
                },
                {
                  "key": "startDate",
                  "value": "2024-01-01"
                },
                {
                  "key": "endDate",
                  "value": "2024-12-31"
                }
              ]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-set token from login response",
          "if (pm.response && pm.response.json() && pm.response.json().data && pm.response.json().data.token) {",
          "    pm.collectionVariables.set('token', pm.response.json().data.token);",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-save invoice ID from create invoice response",
          "if (pm.response && pm.response.json() && pm.response.json().data && pm.response.json().data._id) {",
          "    pm.collectionVariables.set('invoiceId', pm.response.json().data._id);",
          "}"
        ]
      }
    }
  ]
}
